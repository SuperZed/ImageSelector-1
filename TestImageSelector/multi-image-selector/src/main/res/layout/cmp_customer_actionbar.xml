<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_titlebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4E93D0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:padding="14dp"
        android:src="@color/bg_back_button" />

    <TextView
        android:id="@+id/tv_titlename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
        android:layout_toRightOf="@id/iv_back"
        android:layout_centerVertical="true"
        android:text="选择图片"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_gf_clear"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_gf_preview"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_choose_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginRight="9dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text = "已选(0/10)"
            android:visibility="visible"/>

    </LinearLayout>

</RelativeLayout>